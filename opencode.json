{
  "$schema": "https://opencode.ai/config.json",
  "lsp": {
    "typescript": {
      "command": ["typescript-language-server", "--stdio"],
      "extensions": [".ts", ".tsx"],
      "enabled": true
    },
    "ruby": {
      "command": ["solargraph", "--stdio"],
      "extensions": [".rb"],
      "enabled": true
    },
    "ruby-lsp": {
      "command": ["ruby-lsp"],
      "extensions": [".rb", ".rake", ".erb"],
      "enabled": true
    }
  }
}
